---
const PROJECTS = [
  {
    title: "SVGL - A beautiful library with SVG icons",
    description: "created from scratch with React and Tailwind CSS.",
    link: "https://example.com",
    image: "/projects/svgl.webp",
    tags: ["React", "Tailwind CSS"],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul>
        {tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img 
        class="rounded"
        src={image} 
        alt={"project screenshot ${image}"} />
    </article>
  ))
}
